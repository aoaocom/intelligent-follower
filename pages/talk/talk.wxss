/* pages/talk/talk.wxss */

  
  .scroll-wrap {
    height: calc(100vh - 90px);
    width: 100vw;
    overflow: hidden;
    z-index: 20;
  }
  
  .unit-view {
    padding: 0 20px;
    width: 100%;
    box-sizing: border-box;
  }
  
  .text {
    padding-bottom: 10px;
    display: flex;
  }
  
  .header {
    width: 38px;
    height: 38px;
    margin-right: 10px;
    margin-top: 10px;
  }
  
  .leftView {
    margin: 10px 0;
    padding: 10px 18px;
    background: rgba(255, 255, 255, 1);
    color: rgba(48, 49, 51, 1);
    border-radius: 5px;
    max-width: calc(96vw - 120px);
    font-size: 13px;
    line-height: 18px;
    overflow: hidden;
    word-wrap: break-word;
    text-align: justify;
    box-shadow: 0px 3px 8px 0px rgba(219, 235, 249, .51);
    border: 1px solid rgba(213, 226, 254, 1);
  }
  
  .queryCard {
    display: flex;
    flex-direction: row-reverse;
  }
  
  .userHeader {
    width: 38px;
    height: 38px;
    margin-left: 10px;
    margin-top: 10px;
  }
  
  .rightView {
    margin: 10px 0;
    padding: 10px 18px;
    background: rgba(231, 244, 255, 1);
    box-shadow: 0px 3px 8px 0px rgba(219, 235, 249, .51);
    font-size: 13px;
    color: rgba(48, 49, 51, 1);
    line-height: 18px;
    border-radius: 5px;
    border: 1px solid rgba(213, 226, 254, 1);
    max-width: calc(96vw - 120px);
    overflow: hidden;
    word-wrap: break-word;
    text-align: justify;
  }
  
  .bottom-operate-view {
    width: 100%;
    height: 90px;
    background-color: #f6f6f6;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    padding: 7px 20px 0;
    box-sizing: border-box;
  }
  
  .input-btn-inputView {
    height: 40px;
    background-color: #fff;
    box-shadow: 0px 8px 32px 3px rgba(212, 212, 212, 0.19);
    display: flex;
    flex: 1;
    justify-content: center;
    align-items: center;
  }
  
  .input-view {
    padding: 5px 10px;
    font-size: 15px;
    height: 30px;
    width: 100%;
  }
  
