  @keyframes f {
    0% {
      -webkit-transform: rotate(0deg);
      transform: rotate(0deg)
    }
  
    to {
      -webkit-transform: rotate(1turn);
      transform: rotate(1turn)
    }
  }
  page{
    height:100%;
  }
  .background {
    width: 100%;
    height: 100%;
    position:fixed; 
    background-size:100% 100%;
    z-index: -1;
  }
  