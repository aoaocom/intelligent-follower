<view class="header-modular" wx:if="{{now}}">
	<image class="bg-wave" src="http://m.qpic.cn/psc?/V52rE9n72p9ICb1FfcgI3wp7Xj0vkvyl/ruAMsa53pVQWN7FLK88i5i29DOEAybmBWSIGFL03.r0ghP3kFQTVpglovAZGUk*xca7tGD9N16a2XqfYRQwVXCPKk2D8TWZlyg6zbhmuX3E!/b&bo=IAOpAAAAAAACB6k!&rf=viewer_4" style="position: absolute; left: -15rpx; top: 554rpx; width: 779rpx; height: 633rpx; display: block; box-sizing: border-box"></image>
	<view class="row">
		<view class="row location-wrap" bindtap="selectLocation">
			<image class="icon" src="http://m.qpic.cn/psc?/V52rE9n72p9ICb1FfcgI3wp7Xj0vkvyl/ruAMsa53pVQWN7FLK88i5tmz7my1mxFRVrLC.N9oYyVbb*ClPO3oclLDBUSI83e0vO7JufR2RxzQKGQxTkT4NXWhAF2cRk9y4DDjIMY72UQ!/b&bo=SANIAwAAAAADByI!&rf=viewer_4"></image>
			<!--https://codermoyv.gitee.io/coder-moyv/assets/images/wechat/bg_wave.gif-->
				<!--https://wimg.588ku.com/gif/20/06/16/6492f6fc0267613c3936e4ac827f62bf.gif-->
			<view class="title">{{City}} {{County}}</view>
		</view>

	</view>
	<view class="row">
		<view class="tmp">{{now.temp}}°</view>
		<image class="icon-weather" src="https://codermoyv.gitee.io/coder-moyv/assets/images/wechat/weather_custom/{{now.icon}}.png"></image>
	</view>
	<view class="tips-wrap">
		<view class="tips ">{{now.windDir}} {{now.windScale}}级</view>
		<view class="tips ">湿度 {{now.humidity}}%</view>
		<view class="tips ">气压 {{now.pressure}}Pa</view>
	</view>
</view>


<button class="publish" disabled="{{disabled}}" bindtap='submit' style="position: relative; left: 0rpx; top: 392rpx; width: 458rpx; height: 94rpx; display: block; box-sizing: border-box">
  <navigator url="/pages/frontpage/frontpage"
  hover-class="navigator-hover"  style="width: 359rpx; height: 57rpx; display: block; box-sizing: border-box">点击回到主界面</navigator>
</button>

